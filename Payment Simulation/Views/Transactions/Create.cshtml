@model Payment_Simulation.Models.Transactions

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Make Payment</h1>

<hr />
<div class="row">
    <div class="col-md-6 form">
        <form asp-action="CreateTransaction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3 class="text-center">Remitter Details</h3>
            <hr>
             <div class="form-group">
                <input asp-for="Remitter.name" placeholder="Remitter Name" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Remitter.phoneNumber" placeholder="Remitter PhoneNumber" class="form-control" />
            </div>
            <h3 class="mt-3 text-center">Recipient Details</h3>
            <hr>
             <div class="form-group">
                <input asp-for="Recipient.name" placeholder="Recipient Name" class="form-control" />
            </div>
            <div class="form-group">
                <select id="channel" class="form-control" asp-for="channelType">
                    <option value="">***Select***</option>
                </select>
                <input type="hidden" asp-for="channelType" />
            </div>
            <div class="form-group">
                <input asp-for="Recipient.primaryAccountNumber" placeholder="Recipient Account" class="form-control" />
            </div>
            <hr class="mt-3" />
            <div class="form-group">
                <input asp-for="amount" placeholder="amount" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="reference" placeholder="reference" class="form-control" />
            </div>
            
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Transact" class="btn btn-one" />
            </div>
        </form>
    </div>
</div>

<script>

    $(document).ready(function () {
        GetRoutes();
    });
    function GetRoutes() {
        $.getJSON("/Transactions/GetRoutes",
            function (json) {
                if (json != null) {

                    $.each(json,
                        function (index, itemData) {
                            $("#channels").append($("<option></option>")
                                .attr({ "value": itemData.value, "channelType": itemData.channelType})
                                .text(itemData.text));

                        });

                    //onchange function to populate routeId and channel type
                    $(function () {
                        $('#routes').change(function () {
                            var selectedItem = $(this).find(':selected');

                            $('#routeId').val($(this).val());
                            $('#channelType').val(selectedItem.attr('channelType'));
                        }).change(); // Trigger the event
                    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
