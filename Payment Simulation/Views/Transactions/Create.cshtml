@model Payment_Simulation.Models.Transactions

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Make Payment</h1>

<hr />
<div class="row">
    <div class="col-md-6 form">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <input asp-for="Remitter.name" placeholder="Remitter Name" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Remitter.phoneNumber" placeholder="Remitter PhoneNumber" class="form-control" />
            </div>
             <div class="form-group">
                <input asp-for="Recipient.name" placeholder="Recipient Name" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="channelType"  asp-route="routes" placeholder="channelType" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Recipient.primaryAccountNumber" placeholder="Recipient Account" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="amount" placeholder="amount" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="reference" placeholder="reference" class="form-control" />
            </div>
            
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Transact" class="btn btn-one" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
