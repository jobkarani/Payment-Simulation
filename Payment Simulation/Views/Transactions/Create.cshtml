@model Payment_Simulation.Models.Transactions

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-3">Make Payment</h1>

<hr />
<div class="row">
    <div class="col-md-12 form">
        <form asp-action="Create"  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="row  col-md-6">
                <h3 class="text-center">Remitter Details</h3>
                <div class="form-group">
                    <input asp-for="Remitter.name" placeholder="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Remitter.address" placeholder="Address" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Remitter.financialInstitution" placeholder="Bank" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Remitter.primaryAccountNumber" placeholder="Account Number" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="Remitter.idNumber" placeholder="ID Number" class="form-control" />
                </div>
                 <div class="form-group">
                    <input asp-for="Remitter.phoneNumber" placeholder="PhoneNumber" class="form-control" />
                </div>
            </div>
                <div class="row  col-md-6">
                    <h3 class=" text-center">Recipient Details</h3>
                    <div class="form-group">
                        <input asp-for="Recipient.name" placeholder="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input asp-for="Recipient.address" placeholder="Address" class="form-control" />
                    </div>
                     <div class="form-group">
                        <input asp-for="Recipient.financialInstitution" placeholder="Bank" class="form-control" />
                    </div>
                    <div class="form-group">
                    <input asp-for="Recipient.primaryAccountNumber" placeholder="Account Number" class="form-control" />
                    </div>
                    <div class="form-group">
                    <input asp-for="Recipient.idNumber" placeholder="ID Number" class="form-control" />
                    </div>
                    <div class="form-group">
                    <input asp-for="Recipient.phoneNumber" placeholder="Phone Number" class="form-control" />
                    </div>
                </div>
            </div>
           
            <hr class="mt-5" />
                <h3 class="text-center">Payment Details</h3>
                <div class="row">
                    <div class="form-group col-md-6 ">
                        <select id="routes" class="form-control" asp-for="routeId">
                            <option class="select" selected>***Select Payment Route***</option>
                        </select>
                        <input type="text" hidden id="channelType" asp-for="routeId" />
                    </div>
                
                <div class="form-group text-center col-md-6">
                    <input asp-for="amount" placeholder="Amount" class="form-control" />
                </div>
                <div class="form-group text-center col-md-6">
                    <input asp-for="reference" placeholder="Reference" class="form-control" />
                </div>
            </div>
           
            
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Transact" class="btn btn-one" />
            </div>
        </form>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function(){
        GetRoutes();
    });
    function GetRoutes(){
        $.getJSON("/Transactions/GetRoutes",
            function(json){
                if(json != null){
                    
                    $.each(json,
                        function (index, itemData) {
                            $("#routes").append($("<option></option>")
                                .attr({ "value": itemData.value, "channelType": itemData.channelType})
                                .text(itemData.text));

                        });

                        $(function () {
                        $('#routes').change(function () {
                            var selectedItem = $(this).find(':selected');

                            @* $('#routeId').val($(this).val()); *@
                            $('#channelType').val(selectedItem.attr('channelType'));
                        }).change(); 
                    });
                }
            }
        )
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
